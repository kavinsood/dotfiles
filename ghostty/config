# Fonts
font-family = "CommitMono Nerd Font"
font-size = 12
font-feature = liga
font-feature = calt

# Color Themes

# Window Options
window-padding-x = 0
window-padding-y = 0
adjust-cell-width = -1
adjust-cell-height = -1

# Create splits
keybind = ctrl+shift+(=new_split:right
keybind = ctrl+shift+)=new_split:down

# Navigate splits
keybind=ctrl+alt+(=goto_split:right
keybind=ctrl+alt+)=goto_split:down
focus-follows-mouse=true

